<Window x:Class="UI.Views.Aria2LogWindow"  
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
       xmlns:local="clr-namespace:UI.Views"  
       xmlns:vm="clr-namespace:UI.ViewModels"  
       mc:Ignorable="d"  
       Title="Aria2LogWindow" Height="450" Width="800"  
       d:DataContext="{d:DesignInstance Type=vm:Aria2LogWindowViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <!-- 第一部分：输出日志 -->
        <TextBox Grid.Row="0" 
                 Text="{Binding OutputLog}"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"/>
        <GridSplitter Grid.Row="1" Height="10" HorizontalAlignment="Stretch" />

        <!-- 第二部分：错误日志 -->
        <TextBox Grid.Row="2" 
                 Text="{Binding ErrorLog}"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"/>
    </Grid>  
</Window>
