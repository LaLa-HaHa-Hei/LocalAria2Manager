<Window x:Class="UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Views"
        xmlns:vm="clr-namespace:UI.ViewModels"
        mc:Ignorable="d"
        Title="SettingsWindow" SizeToContent="Height" Width="500" Icon="/Resources/Icon.ico"
        d:DataContext="{d:DesignInstance Type=vm:SettingsWindowViewModel}">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Header="Aria2 Settings">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="RPC Listen Port: "/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding RpcListenPort}" Width="70"/>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1" Header="UI Settings">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Show Window On Startup: "/>
                <CheckBox Grid.Row="0" Grid.Column="1" IsChecked="{Binding ShowOnStartup}" />
            </Grid>
        </GroupBox>
        <Button Grid.Row="2" Content="保存设置"
                Command="{Binding SaveSettingsCommand}" HorizontalAlignment="Center" Margin="0,10,0,0" Width="70" Height="20"/>
    </Grid>
</Window>
